<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:orientation="vertical"
    android:weightSum="1">


    <FrameLayout
        android:id="@+id/hangmanImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="32dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:visibility="invisible">

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right">

        <FrameLayout
            android:id="@+id/infoFrame"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/text_background"
            android:visibility="invisible">

            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/infoLabel"
                style="@style/InfoLabelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/pointsFrame"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/text_background"
            android:visibility="invisible">

            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/pointsLabel"
                style="@style/InfoLabelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.example.eweli.sm_projekt.LetterTextView
            android:id="@+id/answerLabel"
            style="@style/LetterLabelView"
            android:visibility="invisible"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/alphabetFrame"
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/text_background"
        android:visibility="invisible">


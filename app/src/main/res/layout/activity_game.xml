                android:onClick="onClick"
                android:tag="A"
                android:text="A" />

            <com.example.eweli.sm_projekt.LetterTextView
                style="@style/AlphabetLetterTextView"
                android:fontFamily="monospace"
                android:onClick="onClick"
                android:tag="Ą"
                android:text="Ą" />


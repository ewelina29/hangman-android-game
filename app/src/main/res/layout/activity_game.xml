                style="@style/AlphabetLetterTextView"
                android:onClick="onClick"
                android:tag="Ż"
                android:text="Ż" />


        </GridLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/duetSummaryFrame"
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/text_background"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/duetResultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="30sp" />

            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/duelNextWordRedirect"
                style="@style/RedirectButton"
                android:text="@string/nextWord" />


        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/summaryFrame"
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/text_background"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="30sp" />

            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/nextWordRedirect"
                style="@style/RedirectButton"
                android:text="@string/nextWord" />


            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/newCategoryRedirect"
                style="@style/RedirectButton"
                android:text="@string/newCategory" />


            <com.example.eweli.sm_projekt.LetterTextView
                android:id="@+id/menuRedirect"
                style="@style/RedirectButton"
                android:text="@string/menu" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>